<h1>Book detail</h1>
<div>
  <p><%= image_tag 'no_image.jpg' %><br>
     <%= @book.user.name %></p>
  <p>Title:<%= @book.title %></p>
  <p>Opsioin:<%= @book.body %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>